{
  "name": "hydra-npm-scripts-runner",
  "displayName": "Hydra Npm Scripts Runner",
  "description": "Run, build, and watch npm scripts from the folder context menu.",
  "version": "2.0.37",
  "publisher": "Hydra",
  "license": "MIT",
  "author": "Pratik Bali",
  "icon": "hydra-script-logo-main.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:watchWidget.watchWidget",
    "onCommand:watchWidget.build",
    "onCommand:watchWidget.defaultWatch",
    "onCommand:watchWidget.moreScripts",
    "onCommand:watchWidget.refreshScripts",
    "onCommand:watchWidget.configureScripts",
    "onCommand:watchWidget.debugConfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "watchWidget.watchWidget",
        "title": "$(play) Watch Widget"
      },
      {
        "command": "watchWidget.build",
        "title": "$(gear) Build"
      },
      {
        "command": "watchWidget.defaultWatch",
        "title": "$(eye) Watch"
      },
      {
        "command": "watchWidget.moreScripts",
        "title": "$(list-unordered) More Scripts",
        "category": "Hydra Npm Scripts Runner"
      },
      {
        "command": "watchWidget.configureScripts",
        "title": "$(settings-gear) Configure Scripts"
      },
      {
        "command": "watchWidget.debugConfig",
        "title": "$(bug) Debug Config"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "watchWidget.watchWidget",
          "when": "explorerResourceIsFolder",
          "group": "1_custom@1"
        },
        {
          "submenu": "watchWidget.moreScriptsSubmenu",
          "when": "explorerResourceIsFolder",
          "group": "1_custom@2"
        }
      ],
      "watchWidget.moreScriptsSubmenu": [
        {
          "command": "watchWidget.build",
          "when": "explorerResourceIsFolder",
          "group": "a@1"
        },
        {
          "command": "watchWidget.defaultWatch",
          "when": "explorerResourceIsFolder",
          "group": "a@2"
        },
        {
          "command": "watchWidget.refreshScripts",
          "when": "explorerResourceIsFolder",
          "group": "z_refresh@1"
        },
        {
          "command": "watchWidget.configureScripts",
          "when": "explorerResourceIsFolder",
          "group": "z_separator@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "watchWidget.moreScriptsSubmenu",
        "label": "More Scripts",
        "icon": "$(list-unordered)"
      }
    ],
    "configuration": {
      "title": "Hydra Npm Scripts Runner",
      "properties": {
        "hydraNpmScriptsRunner.enabledScripts": {
          "type": "object",
          "default": {},
          "description": "Enabled scripts per workspace folder",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "if exist out rmdir /S /Q out && mkdir out || echo Cleaned output directory",
    "clean-vsix": "del *.vsix 2>nul || echo No VSIX files to delete",
    "version:patch": "npm version patch --no-git-tag-version",
    "package": "npm run clean-vsix && npm run clean && npm run version:patch && npm run compile && vsce package",
    "package-only": "npm run clean-vsix && npm run clean && npm run compile && vsce package",
    "install-local": "for /f %i in ('node -p \"require('./package.json').version\"') do code --install-extension hydra-npm-scripts-runner-%i.vsix --force",
    "all": "npm run package && npm run install-local"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^24.0.0",
    "typescript": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PratikBali/hydra-npm-scripts-runner"
  },
  "keywords": [
    "hydra",
    "npm",
    "scripts",
    "runner",
    "build",
    "watch",
    "folder",
    "development",
    "terminal"
  ]
}
