{
  "name": "watch-widget",
  "displayName": "Watch Widget",
  "description": "Simple watch widget to run npm run watch from folder context menu",
  "version": "2.0.28",
  "publisher": "Hydra",
  "license": "MIT",
  "author": "Pratik Bali",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:watchWidget.watchWidget",
    "onCommand:watchWidget.moreScripts",
    "onCommand:watchWidget.refreshScripts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "watchWidget.watchWidget",
        "title": "$(play) Watch Widget"
      },
      {
        "command": "watchWidget.build",
        "title": "$(gear) Build"
      },
      {
        "command": "watchWidget.defaultWatch",
        "title": "$(eye) Watch"
      },
      {
        "command": "watchWidget.moreScripts",
        "title": "$(list-unordered) More Scripts",
        "category": "More Scripts"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "watchWidget.watchWidget",
          "when": "explorerResourceIsFolder",
          "group": "1_custom@1"
        },
        {
          "submenu": "watchWidget.moreScriptsSubmenu",
          "when": "explorerResourceIsFolder",
          "group": "1_custom@2"
        }
      ],
      "watchWidget.moreScriptsSubmenu": [
        {
          "command": "watchWidget.build",
          "when": "explorerResourceIsFolder",
          "group": "a@1"
        },
        {
          "command": "watchWidget.defaultWatch",
          "when": "explorerResourceIsFolder",
          "group": "a@2"
        },
        {
          "command": "watchWidget.refreshScripts",
          "when": "explorerResourceIsFolder",
          "group": "z_refresh@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "watchWidget.moreScriptsSubmenu",
        "label": "More Scripts",
        "icon": "$(list-unordered)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "if exist out rmdir /S /Q out && mkdir out || echo Cleaned output directory",
    "clean-vsix": "del *.vsix 2>nul || echo No VSIX files to delete",
    "version:patch": "npm version patch --no-git-tag-version",
    "package": "npm run clean-vsix && npm run clean && npm run version:patch && npm run compile && vsce package",
    "package-only": "npm run clean-vsix && npm run clean && npm run compile && vsce package",
    "install-local": "for /f %i in ('node -p \"require('./package.json').version\"') do code --install-extension watch-widget-%i.vsix --force",
    "all": "npm run package && npm run install-local"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^24.0.0",
    "typescript": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/watch-widget"
  },
  "keywords": [
    "watch",
    "folder",
    "npm",
    "development",
    "terminal"
  ]
}
